@model WebGameV1.Models.ViewModel.CategoryVM

<div class="card mt-4">
    <div class="card-header">
        <h4 class="text-center">Chi Tiết Loại Tài Khoản</h4>
    </div>

    <div class="card-body">
        <div class="row">
            <!-- Category Details Section -->
            <div class="col-md-6">
                <h4>Thông tin chi tiết</h4>
                <p><strong>Ngày tạo:</strong> @Model.Category.CreateDate.ToString("dd/MM/yyyy")</p>
                @if (Model.Category.UpdateDate.HasValue)
                {
                    <p><strong>Ngày cập nhật:</strong> @Model.Category.UpdateDate.Value.ToString("dd/MM/yyyy")</p>
                }
            </div>

            <!-- SubCategories Section -->
            <div class="col-md-6">
                <h4>Danh mục con</h4>
                @if (Model.SubCategories != null && Model.SubCategories.Any())
                {
                    <ul>
                        @foreach (var subCategory in Model.SubCategories)
                        {
                            <li>@subCategory.SubCategoryName</li>
                        }
                    </ul>
                }
                else
                {
                    <p>Không có danh mục con cho loại tài khoản này.</p>
                }
            </div>
        </div>

        <!-- Back Button -->
        <div class="mt-4 d-flex justify-content-start">
            <a href="@Url.Action("Index", "Category")" class="btn btn-primary">Back to list</a>
        </div>
    </div>
</div>

<style>
    .card {
        margin: 20px auto;
        max-width: 900px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }

   

    .category-title {
        font-size: 1.5rem; /* Adjust title size */
        margin: 0; /* Remove default margin */
        text-align: center; /* Center title */
        font-weight: bold;
    }

    .text-center {
        text-align: center;
    }
</style>
