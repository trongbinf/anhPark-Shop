@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Gửi lại email xác nhận";
}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <form method="post">                 
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="w-100 btn btn-lg btn-primary">Gửi lại</button>
                </form>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary">Trở lại</a>
    </div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
