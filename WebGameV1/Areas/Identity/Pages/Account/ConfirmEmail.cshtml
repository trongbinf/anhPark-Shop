@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
}

@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    var statusMessageClass = Model.StatusMessage.StartsWith("Cảm ơn") ? "text-success" : "text-danger";
    <div class="text-center mt-4">       
        <span class="@statusMessageClass">@Model.StatusMessage</span>
    </div>
}
<div class="mt-3">
    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary">Trở lại</a>
</div>